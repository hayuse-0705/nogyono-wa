<div class="line_baner " style="background-color:{{ section.settings.banner_back_color }}">
  <div class="line_baner_content">
    <div class="banner_image_area"><img class="banner_image" src="{{ section.settings.logo_img | img_url: 'master' }}" alt="{{ section.settings.logo_img.alt }}"></div>
    <p class="line_baner_text" style="color:{{ section.settings.banner_text_color }}">{{ section.settings.banner_text }}</p>
    <a class="line_baner_btn" href="https://lin.ee/zcXSGGp" style="color:{{ section.settings.banner_btn_text_color }};background-color:{{ section.settings.banner_btn_color }}">{{section.settings.banner_btn_text}}</a>
  </div>
</div>



{% schema %}
{
 "name": "バナー広告編集",
 "settings": [
  {
    "type": "color",
    "id": "banner_back_color",
    "label": "バナーの背景色を選択",
    "default":"#fff"
   },
  {
   "type": "image_picker",
   "id": "logo_img",
   "label": "画像を選ぶ"
  },
  {
    "type":"text",
    "id":"banner_text",
    "label":"バナーのテキストを追加"
  },
  {
    "type": "color",
    "id": "banner_text_color",
    "label": "バナーのテキストカラーを選択",
    "default":"#000"
   },
   {
    "type":"text",
    "id":"banner_btn_text",
    "label":"バナーボタンのテキストを追加"
  },
  {
    "type": "color",
    "id": "banner_btn_text_color",
    "label": "バナーボタンのテキストカラーを選択",
    "default":"#fff"
   },
   {
    "type": "color",
    "id": "banner_btn_color",
    "label": "バナーボタンのカラーを選択",
    "default":"#008000"
   }
 ],

"presets": [
  {
   "name": "テスト画像",
   "category": "画像"
  }
 ]
}
{% endschema %}

{% stylesheet %}
.line_baner{
    display: none;
}
  @media screen and (max-width: 991px) {
    .line_baner{
        position:relative;
        width:100%;
        height:70px;
        display:block;
        position:fixed;
        z-index:99;
        bottom: 0%;
        background-color:rgba(255,255,255,0.8);
    }
    .line_baner_content{
        position:relative;
        height:100%;
        display: flex;
        justify-content: space-between;
        align-items:center;
        padding-left: 5px;
        padding-right: 5px;
        gap:5px;
    }
    .banner_image_area{
        position: relative;
        height: 50px;
    }
    .line_baner_text{
      font-size:0.8rem;
      max-width:150px;
    }
    .line_baner_btn{
      background-color:#008000;
      border-radius:20px;
      color:#fff;
      font-size:0.8rem;
      padding:3px 8px;
    }
    .banner_image{
        height: 100%;
    }
  }
{% endstylesheet %}