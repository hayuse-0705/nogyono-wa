.news_article_title{
    font-size:1.5rem;
    border-bottom:1px solid #000;
    border-top:1px solid #000;
    padding:20px;
    width:50%;
    max-width:800px;
    margin:100px auto;
    text-align:center;
}
.news_article{
    position:relative;
    width:90%;
    max-width:1000px;
    margin: 0 auto;
    padding-bottom:100px;
    text-align:left;
}
.news_article h1{
    font-size:2rem;
    border-left:10px solid #5f5f5f;
    padding-left:5px;
}
.news_article h2{
    position:relative;
    left:50%;
    transform:translateX(-50%);
    font-size:1.5rem;
    display:inline-block;
    padding:10px 0;
}
.news_article h2::before{
    content:'';
    position:absolute;
    border-bottom:thick double #afafaf;
    border-top:thick double #afafaf;
    left:0%;
    top:0%;
    width:100%;
    height:100%;
    transform:scaleX(150%);
}
.news_article h3{
    position:relative;
    font-size:1.25rem;
    display:inline-block;
    padding:0 20px;
}
