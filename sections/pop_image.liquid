<div class="line_pop " style="background-color:{{section.settings.pop_back_color}}">
  <div class="line_pop_close_btn close_func"></div>
  <div class="line_pop_content">
    <div class="pop_image_area"><img class="pop_image" src="{{ section.settings.logo_img | img_url: 'master' }}" alt="{{ section.settings.logo_img.alt }}"></div>
    <a class="line_pop_btn" style="color: {{ section.settings.pop_btn_text_color }}; background-color:{{section.settings.pop_btn_back_color}}" href="{{ section.settings.pop_btn_url }}">{{ section.settings.pop_btn_text }}</a>
    <p class="line_pop_text" style="color:{{ section.settings.pop_btn_desc_color }}">{{ section.settings.pop_btn_desc_text }}</p>
  </div>
</div>
<div class="back-overlay close_func"></div>



{% schema %}
{
 "name": "pop広告編集",
 "settings": [
  {
    "type": "color",
    "id": "pop_back_color",
    "label": "ポップの背景色を選択",
    "default":"#fff"
   },
  {
   "type": "image_picker",
   "id": "logo_img",
   "label": "画像を選ぶ"
  },
